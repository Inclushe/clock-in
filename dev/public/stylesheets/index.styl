@import '_transitions'
@import '_variables'
@import '_fab'
@import '_buttons'
@import '_clock'
@import '_timer'
@import '_stopwatch'
@import '_alarm'

html
  touch-action: manipulation
  -webkit-tap-highlight-color: transparent

*::webkit-selection
  background: transparent

body
  margin: 0
  padding: 0
  height: 100%
  width: 100%
  background: bgColor
  color: mainColor
  font-family: 'Inter', sans-serif

@supports (font-variation-settings: normal) {
  body { font-family: 'Inter var', sans-serif }
}

#app
  display: flex
  justify-content: center
  align-items: center
  height: 100vh
  width: 100vw
  &.alert
    animation: alert 1s steps(1, end) infinite

@keyframes alert
  0%
    background: mainColor
  50%
    background: bgColor

.container
  display: grid
  grid-template-rows: repeat(12, 3em)
  grid-template-columns: repeat(24, 3em)
  grid-gap: 1em 1.5em
  gap: 1em 1.5em
  font-size: 16px
  &.settings-active
    // justify-self: start
    transform: scale(0.5)
  .section-container
    grid-row: 1 / 10
    grid-column: 1 / -1
    display: grid
    grid-template-rows: repeat(9, 3em)
    grid-template-columns: repeat(24, 3em)
    grid-gap: 1em 1.5em
    gap: 1em 1.5em
    font-size: 16px
    will-change: auto
    -webkit-transform: translateX(0)

#header
  grid-row: 2 / 4
  grid-column: 4 / 22
  display: flex
  align-items: center
  img
    margin-right: 1em
  h2
    text-transform: uppercase
    font-weight: bold
    font-size: 3em

.time-style
  display: flex
  justify-content: center
  flex-direction: row
  font-family: 'Graduate', sans-serif
  text-align: center
  font-variation-settings: "XOPQ" 150, "XTRA" 100, "OPSZ" 16, "GRAD" 20, "YTRA" 850, "CNTR" 100, "YOPQ" 100, "SERF" 0, "YTAS" 0, "YTLC" 650, "YTDE" 0, "SELE" 0
  &.alert
    animation: alert-text 1s steps(1, start) infinite
    // font-variation-settings: "XOPQ" 200, "XTRA" 100, "OPSZ" 16, "GRAD" 20, "YTRA" 850, "CNTR" 100, "YOPQ" 100, "SERF" 0, "YTAS" 0, "YTLC" 650, "YTDE" 0, "SELE" 0
  div 
    flex-grow: 0
    flex-shrink: 0
    will-change: -webkit-transform
    -webkit-transform: translateX(0)
    margin-left: -0.025em
    &.number
      width: 0.65em
    &.colon
      width: 0.25em

#border, #outlineBorder
  grid-row: 1 / 10
  grid-column: 1 / -1
  transition: clip-path 100ms linear
  pointer-events: none
  svg
    height: 100%
    width: 100%

#outlineBorder
  z-index: -1

#button-row
  grid-row: 11 / -1
  grid-column: 1 / -1
  display: flex
  justify-content: space-between
  .section-group
    display: flex
    align-items: center
    svg
      padding: 0 1.5em
    a.icon img
      height: 6em
      width: 6em

.input
  background-color: secondaryColor
  border-radius: 1rem
  &--timer
    grid-row: 4 / -1
    grid-column: 4 / 22
    padding-right: 2em
    input#input
      font-size: 16em
      text-align: right
  &--alarm
    grid-row: 4 / 8
    grid-column: 14 / 22
    input#input
      font-size: 10em
      text-align: center
  input#input
    background: transparent
    color: tertiaryColor
    height: 100%
    width: 100%
    font-family: 'Graduate', sans-serif
    font-variation-settings: "XOPQ" 40, "XTRA" 100, "OPSZ" 12, "GRAD" 20, "YTRA" 850, "CNTR" 100, "YOPQ" 100, "SERF" 0, "YTAS" 0, "YTLC" 650, "YTDE" 0, "SELE" 0
    border: none

.settings
  position: absolute
  top: 0
  bottom: 0
  right: 0
  width: 50%
  background: #445857
  color: white