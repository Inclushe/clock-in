@import '_transitions'
@import '_variables'
@import '_fab'
@import '_buttons'
@import '_clock'
@import '_timer'
@import '_stopwatch'
@import '_alarm'
@import '_pomodoro'
@import '_interval'

html
  touch-action: manipulation
  -webkit-tap-highlight-color: transparent

*::webkit-selection
  background: transparent

body
  margin: 0
  padding: 0
  height: 100%
  width: 100%
  background: bgColor
  color: mainColor
  font-family: 'Inter', sans-serif

@supports (font-variation-settings: normal) {
  body { font-family: 'Inter var', sans-serif }
}

#app
  display: flex
  justify-content: center
  align-items: center
  height: 100vh
  width: 100vw
  &.alert
    animation: alert 1s steps(1, end) infinite

@keyframes alert
  0%
    background: mainColor
  50%
    background: bgColor

.container
  display: grid
  grid-template-rows: repeat(12, 3em)
  grid-template-columns: repeat(24, 3em)
  grid-gap: 1em 1.5em
  gap: 1em 1.5em
  font-size: 8px
  &.settings-active
    // justify-self: start
    transform: scale(0.5)
  .section-container
    grid-row: 1 / 10
    grid-column: 1 / -1
    display: grid
    grid-template-rows: repeat(9, 3em)
    grid-template-columns: repeat(24, 3em)
    grid-gap: 1em 1.5em
    gap: 1em 1.5em
    font-size: 8px
    will-change: auto
    -webkit-transform: translateX(0)

#header
  grid-row: 2 / 4
  grid-column: 4 / 22
  display: flex
  justify-content: space-between
  align-items: center
  img
    margin-right: 1em
    height: 3em
    width: 3em
    vertical-align: top
  h1
    display: inline-block
    text-transform: uppercase
    font-weight: bold
    font-size: 3em
  h2
    font-size: 2em
    font-weight: normal

.time-style
  display: flex
  justify-content: center
  flex-direction: row
  font-family: 'Graduate', sans-serif
  text-align: center
  font-variation-settings: "XOPQ" 150, "XTRA" 100, "OPSZ" 16, "GRAD" 20, "YTRA" 850, "CNTR" 100, "YOPQ" 100, "SERF" 0, "YTAS" 0, "YTLC" 650, "YTDE" 0, "SELE" 0
  &.alert
    animation: alert-text 1s steps(1, start) infinite
    // font-variation-settings: "XOPQ" 200, "XTRA" 100, "OPSZ" 16, "GRAD" 20, "YTRA" 850, "CNTR" 100, "YOPQ" 100, "SERF" 0, "YTAS" 0, "YTLC" 650, "YTDE" 0, "SELE" 0
  div 
    flex-grow: 0
    flex-shrink: 0
    will-change: -webkit-transform
    -webkit-transform: translateX(0)
    margin-left: -0.025em
    &.number
      width: 0.65em
    &.colon
      width: 0.25em

#border, #outlineBorder
  grid-row: 1 / 10
  grid-column: 1 / -1
  // transition: clip-path 100ms linear
  pointer-events: none
  svg
    height: 100%
    width: 100%

#outlineBorder
  z-index: -1

#button-row
  grid-row: 11 / -1
  grid-column: 1 / -1
  display: flex
  justify-content: space-between
  .section-group
    display: flex
    align-items: center
    svg
      padding: 0 1.5em
    a.icon img
      height: 6em
      width: 6em

.input
  background-color: gray100
  border-radius: 1em
  box-sizing: border-box
  &--timer
    grid-row: 4 / -1
    grid-column: 4 / 22
    padding-right: 2em
    input#input
      font-size: 16em
      text-align: right
  &--alarm
    grid-row: 4 / 8
    grid-column: 14 / 22
    input#input
      font-size: 10em
      text-align: center
  input#input
    box-sizing: border-box
    background: transparent
    color: gray900
    height: 100%
    width: 100%
    font-family: 'Graduate', sans-serif
    font-variation-settings: "XOPQ" 150, "XTRA" 100, "OPSZ" 16, "GRAD" 20, "YTRA" 850, "CNTR" 100, "YOPQ" 100, "SERF" 0, "YTAS" 0, "YTLC" 650, "YTDE" 0, "SELE" 0
    border: none
  &.invalid
    border: 1em solid mainColor

#clock
  grid-row: 2 / 10
  grid-column: 3 / 23
  div
    font-size: 32em
    line-height: 1.17em
  &.show-hours
    grid-row: 4 / 10
    div
      font-size: 21em
      line-height: 1.17em

.indicator
  grid-row: 2 / 4
  grid-column: 4 / 22
  display: flex
  justify-content: space-between
  align-items: center
  &.indicator--landscape
    padding: 0
    justify-content: center
    height: 9em
    margin-top: -8em
    h1
      text-align: center
      font-size: 6em
  img
    margin-right: 1em
    height: 3em
    width: 3em
    vertical-align: top
  h1
    display: inline-block
    text-transform: uppercase
    font-weight: bold
    font-size: 3em
  h2
    margin-right: 1em
    display: inline-block
    font-size: 3em
    font-weight: normal
    text-transform: uppercase
  span.num
    font-weight: bold
    font-size: 3em

.settings
  position: absolute
  top: 0
  bottom: 0
  right: 0
  width: 50%
  background: gray900
  color: white

for scale in (1..16)
  @media screen and (min-width: (120px * scale))
    .container
      font-size: (scale)px + ((16 - scale) * 0.025)
      .section-container
        font-size: (scale)px + ((16 - scale) * 0.025)

@media screen and (min-width: 720px)
  .indicator.indicator--landscape
    display: none