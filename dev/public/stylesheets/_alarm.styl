@import '_variables'

.alarm-section
  grid-row: 3 / -1
  grid-column: 14 / 22
  // overflow-y: scroll
  &_header
    background: mainColor
    color: bgColor
    height: 3em
    width: 100%
    display: flex
    justify-content: center
    align-items: center
    border-radius: 1em 1em 0 0
    h2
      font-size: 2em
.meridiem-radio-section
  grid-row: 8 / 10
  grid-column: 14 / 22
  display: flex
  justify-content: space-around
  .meridiem-radio
    position: absolute
    clip-path: polygon(0 0)
  label.label
    // width: 9em
    // display: flex
    // justify-content: center
    // align-items: center
    // flex-direction: column-reverse
    // border-radius: 1em
    // border: 0.25em solid mainColor
    // color: mainColor
    span
      width: 7em
      height: 100%
      display: flex
      justify-content: center
      align-items: center
      text-align: center
      flex-direction: column-reverse
      border-radius: 1em
      border: 0.125em solid mainColor
      color: mainColor
      font-size: 2em
      font-weight: bold
      border-radius: 1em
      cursor: pointer
    input:checked + span
      background: mainColor
      color: bgColor

.alarms
  grid-row: 4 / -1
  grid-column: 4 / 14
  li
    margin-bottom 1em
    display: flex
    justify-content: flex-start
    align-items: flex-start
    h3
      font-size: 2em
      font-weight: normal
    .time-style
      font-size: 4em
  span.time-style
    width: 4em
  img.icon--delete
    height: 4em
    width: 4em
    padding: 0em
    cursor: pointer
  span.meridiem
    width: 3em
    font-size: 2em
    font-weight: bold
label.alarm-toggle
  position: relative
  input
    position: absolute
    top: 0
    clip-path: polygon(0 0)
  span
    padding-left: 8em
    cursor: pointer
    &::before
      box-sizing: border-box
      content: ''
      display: block
      position: absolute
      top: 0.5em
      left: 0
      height: 3em
      width: 8em
      border: 0.25em solid mainColor
      border-radius: 2em
      transition: background-color 500ms sharpEase
    &::after
      box-sizing: border-box
      content: ''
      display: block
      position: absolute
      top: 1.25em
      left: 1em
      height: 1.5em
      width: 1.5em
      border-radius: 1em
      background: mainColor
      transition: background-color 500ms sharpEase, left 500ms sharpEase
  & > input:checked + span::before
    background: mainColor
  & > input:checked + span::after
    background: bgColor
    left: 5.5em
      