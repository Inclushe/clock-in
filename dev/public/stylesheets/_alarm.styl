@import '_variables'

.alarm-section
  grid-row: 3 / -1
  grid-column: 14 / 22
  // overflow-y: scroll
  &_header
    background: mainColor
    color: bgColor
    height: 3em
    width: 100%
    display: flex
    justify-content: center
    align-items: center
    border-radius: 1em 1em 0 0
    h2
      font-size: 2em
.meridiem-radio-section
  grid-row: 8 / 9
  grid-column: 14 / 22
  display: flex
  .meridiem-radio
    background: mainColor
    color: bgColor
    width: 9em
    display: flex
    justify-content: center
    align-items: center
    border-radius: 1em
    span
      font-size: 1.5em
      font-weight: bold